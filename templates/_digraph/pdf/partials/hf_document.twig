{% if pdf.mpdf.mirrorMargins %}

  <htmlpageheader name="document_even">
    <table class="pdf-header">
      <tr>
        <td style="text-align:left;">{{site_name}}</td>
      </tr>
    </table>
  </htmlpageheader>

  <htmlpageheader name="document">
    <table class="pdf-header">
      <tr>
        <td style="text-align:right;">{{noun.title}}</td>
      </tr>
    </table>
  </htmlpageheader>

  <htmlpagefooter name="document_even">
    <table class="pdf-footer">
      <tr>
        <td style="text-align:left;">{PAGENO}</td>
        <td style="text-align:right;">PDF built {{cms.helper('strings').date()}}</td>
      </tr>
    </table>
  </htmlpagefooter>

  <htmlpagefooter name="document">
    <table class="pdf-footer">
      <tr>
        <td style="text-align:left;">{{package.url()}}</td>
        <td style="text-align:right;">{PAGENO}</td>
      </tr>
    </table>
  </htmlpagefooter>

{% else %}

  <htmlpageheader name="document">
    <table class="pdf-header">
      <tr>
        <td style="text-align:left;">{{site_name}}</td>
        <td style="text-align:right;">{{package.url()}}</td>
      </tr>
    </table>
  </htmlpageheader>

  <htmlpagefooter name="document">
    <table class="pdf-footer">
      <tr>
        <td style="text-align:left;">{{package.url()}}</td>
        <td style="text-align:center;">{{cms.helper('strings').date()}}</td>
        <td style="text-align:right;">{PAGENO}</td>
      </tr>
    </table>
  </htmlpagefooter>

{% endif %}
